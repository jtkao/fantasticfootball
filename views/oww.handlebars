    <div class="row">
        <div id="waiver_bigbox" class="col-xs-4 col-xs-offset-1">
        <br />
            <h3> Available Players </h3>

            {{#each available}}
                <div class="well well-sm">
                    <a id={{id}} class="showSeasonStats">{{name}}
                        <button id={{id}} class="addMe btn btn-success btn-sm">Add</button>
                    </a>
                </div>

                <br>
            {{/each}}
        </div>
    </div>
