<script src="assets/logic/comu_logic.js" type="text/javascript"></script>

	<div class="color_box_for_test alert alert-dismissible alert-info">
		<h2> UPDATE EXISTING PLAYER INFORMATION </h2>
	</div>

<div id="comu_bigbox" class="btn-group col-xs-offset-1">


	<div id="comu_selection_box">
	<select id="updated_season" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
		{{#each season}}
			<option value={{id}}>{{description}}</option>
		{{/each}}
	</select>

	<select id="updated_week" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
			<option value=1 >week 1</option>
			<option value=2 >week 2</option>
			<option value=3 >week 3</option>
			<option value=4 >week 4</option>
			<option value=5 >week 5</option>
			<option value=6 >week 6</option>
			<option value=7 >week 7</option>
			<option value=8 >week 8</option>
			<option value=9 >week 9</option>
			<option value=10 >week 10</option>
			<option value=11 >week 11</option>
			<option value=12 >week 12</option>
			<option value=13 >week 13</option>
			<option value=14 >week 14</option>
			<option value=15 >week 15</option>
			<option value=16 >week 16</option>
	</select>


	<select id="updated_player" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
		{{#each player}}
			<option value={{id}}>{{fname}} {{lname}}</option>
		{{/each}}
	</select>

	<button id="comu_submit_all" class="btn btn-primary">Update</button>
	</div>
	<br>


	<div id="comu_stats_box">
		<a> Touchdowns </a><br>
		<label class="control-label">Pass</label>
		<input class="form-control" id="updated_pass_td" type="number"> 

		<label class="control-label">Rush</label> 
		<input class="form-control" id="updated_rush_td" type="number"> 

		<label class="control-label">Rec</label>
		<input class="form-control" id="updated_rec_td" type="number"> 
		<br><br>

		<a> Yards Gained</a><br>
		<label class="control-label">Pass</label>
		<input class="form-control" id="updated_pass_yd" type="number"> 

		<label class="control-label">Rush</label>
		<input class="form-control" id="updated_rush_yd" type="number"> 

		<label class="control-label">Rec</label>
		<input class="form-control" id="updated_rec_yd" type="number"> 
		<br><br>

		<a> Other Offensive Stats </a><br>
		<label class="control-label">Number of Receptions</label>
		<input class="form-control" id="updated_num_rec" type="number">

		<label class="control-label">Field Goals</label>
		<input class="form-control" id="updated_fg" type="number"> 

		<label class="control-label">Two Point Conversion</label>
		<input class="form-control" id="updated_tpc" type="number">
		<br><br>

		<a> Position Neutral Stats </a><br>
		<label class="control-label">Fumbles</label>
		<input class="form-control" id="updated_fumble" type="number"> 

		<label class="control-label">Interceptions</label>
		<input class="form-control" id="updated_int" type="number"> 
		<br><br>

		<a> Defensive Stats </a><br> 
		<label class="control-label">Sacks</label>
		<input class="form-control" id="updated_sack" type="number"> 

		<label class="control-label">Tackles</label>
		<input class="form-control" id="updated_tackle" type="number"> 
	</div>

	<br>
</div>